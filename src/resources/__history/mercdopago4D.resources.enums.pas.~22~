unit mercdopago4D.resources.enums;

interface

type
  TBaseURL = (BASEURL);

  TResource = (CANCELAMENTO, CLIENTES, CLIENTES_SEARCH, MEIOPAGAMENTO, OAUTH,
    PEDIDOSCOMERCIAIS, PEDIDOSCOMERCIAIS_SEARCH, PAGAMENTOS, PAGAMENTOS_SEARCH,
    PREFERENCIA, PREFERENCIA_SEARCH, REEMBOLSO, REEBOLSO_PAY, CARTOES, USUARIO_TESTE,
    TIPO_PAGAMENTO, CAIXA, PEDIDOS, PEDIDOS_PRESENCIAIS_V2, PEDIDOS_PRESENCIAIS,
    LOJAS_FISICAS, USUARIO_LOJA, BUSCA_LOJA, QR_DINAMICO, ASSINATURAS,
    ASSINATURAS_SEARCH, ASSINATURA_EXPORT, FATURAS, ASSINATURA_SEARCH,
    PLANOS, PLANOS_SEARCH, POINT, PAGAMENTO_POINT, POINT_INTEMCAO, POINT_LISTA,
    WC_ADV_PAYMENTS, AGREEMENTS, AGREEMENTS_CANCEL);

  TBaseURLHelper = record helper for TBaseURL
    function ToString: String;
  end;

  TResourceHelper = record helper for TResource
    function ToString: String;
  end;

implementation

function TBaseURLHelper.ToString: String;
begin
  case Self of
    BASEURL: Result := 'https://api.mercadopago.com';
  end;
end;

{ TResourcesHelper }

function TResourceHelper.ToString: String;
begin
  case Self of
    CANCELAMENTO: Result := '/payments/%s';
    CLIENTES: Result := '/v1/customers/%s';
    CLIENTES_SEARCH: Result := '/v1/customers/search';
    MEIOPAGAMENTO: Result := '/v1/payment_methods';
    OAUTH: Result := '/oauth/token';
    PEDIDOSCOMERCIAIS: Result := '/merchant_orders/%s';
    PEDIDOSCOMERCIAIS_SEARCH: Result := '/merchant_orders/search';
    PAGAMENTOS: Result := '/v1/payments/%s';
    PAGAMENTOS_SEARCH: Result := '/v1/payments/search';
    PREFERENCIA: Result := '/checkout/preferences/%s';
    PREFERENCIA_SEARCH: Result := '/checkout/preferences/search';
    REEMBOLSO: Result := '/v1/chargebacks/%s';
    REEBOLSO_PAY: Result := '/v1/payments/%s/refunds/%s';
    CARTOES: Result := '/v1/customers/%s/cards/%s';
    USUARIO_TESTE: Result := '/users/test';
    TIPO_PAGAMENTO: Result := '/v1/identification_types';
    CAIXA: Result := '/pos/%s';
    PEDIDOS: Result := '/mpmobile/instore/qr/%s/%s';
    PEDIDOS_PRESENCIAIS_V2: Result := '/instore/qr/seller/collectors/%s/stores/%s/pos/%s/orders';
    PEDIDOS_PRESENCIAIS: Result := '/instore/qr/seller/collectors/%s/pos/%s/orders';
    LOJAS_FISICAS: Result := '/stores/%s';
    USUARIO_LOJA: Result := '/users/%s/stores/%s';
    BUSCA_LOJA: Result := '/users/%s/stores/search';
    QR_DINAMICO: Result := '/instore/orders/qr/seller/collectors/%s/pos/%s/qrs';
    ASSINATURAS: Result := '/preapproval/%s';
    ASSINATURAS_SEARCH: Result := '/preapproval/search';
    ASSINATURA_EXPORT: Result := '/preapproval/export';
    FATURAS: Result := '/authorized_payments/%s';
    ASSINATURA_SEARCH: Result := '/authorized_payments/search';
    PLANOS: Result := '/preapproval_plan/%s';
    PLANOS_SEARCH: Result := '/preapproval_plan/search';
    POINT: Result := '/point/integration-api/devices/%s';
    PAGAMENTO_POINT: Result := '/point/integration-api/devices/%s/payment-intents/%s';
    POINT_INTEMCAO: Result := '/point/integration-api/payment-intents/%s';
    POINT_LISTA: Result := '/point/integration-api/payment-intents/%s/events';
    WC_ADV_PAYMENTS: Result := '/v1/advanced_payments/%s/refounds';
    AGREEMENTS: Result := '/v2/wallet_connect/agreements/%s/payer_token';
    AGREEMENTS_CANCEL: Result := '/v2/wallet_connect/agreements/%s';
  end;
end;

end.
